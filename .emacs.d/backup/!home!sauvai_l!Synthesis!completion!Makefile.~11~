NAME			=	project

INCLUDE			=	include

CXXFLAGS			=	-W -Wall -Wextra -Werror -g3 -I$(INCLUDE)

CXX			=	g++

RM			=	rm -f

SRC			=	main.cpp   \

OBJ			=	$(SRC:.cpp=.o)

all			:	$(NAME)

$(NAME)			:	$(OBJ)
				$(CXX) $(OBJ) -o $(NAME)
				@echo "[OK] $(NAME) linked"

%.o			:	%.cpp
				$(CXX) $(CXXFLAGS) -c $< -o $@
				@echo "[OK] [$<] builded"

clean			:
				@$(RM) $(OBJ)
				@echo "[OK] clean"

fclean			:	clean
				@$(RM) $(NAME)
				@echo "[OK] fclean"

re			:	fclean all
