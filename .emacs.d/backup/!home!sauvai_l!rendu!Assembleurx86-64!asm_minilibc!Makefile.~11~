NAME	=	asm

CC	=	gcc

CFLAGS	=	-g3 -W -Wall -Werror -Wextra

NASM	=	nasm -f elf64

RM	=	rm -rf

NSRCS	=	strlen.asm \
		strchr.asm \

NOBJS	=	$(NSRCS:.asm=.o)

SRCS	=	main.c

OBJS	=	$(SRCS:.c=.o)

all:		$(NAME)

$(NAME):	$(OBJS) $(NOBJS)
		$(CC) -o $(NAME) main.o $(OBJS)

%.o:		%.asm		
		$(NASM) -o $@ $<

clean:
		$(RM) $(OBJS) main.o

fclean:		clean
		$(RM) $(NAME)

re:		fclean all
