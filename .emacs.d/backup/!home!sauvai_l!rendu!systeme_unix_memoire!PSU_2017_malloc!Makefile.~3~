NAME	=	libmy_malloc.so

CFLAGS	=	-g3 -W -Wall -Werror -Wextra

LDFLAGS	=	-L./

CC	=	gcc

RM	=	rm -rf

SRCS	=	src/libmy_malloc.c \

all:		$(NAME)

$(OBJS):	$(SRCS)
		$(CC) -c -fpic $(SRCS)

$(NAME):	$(OBJS)
		$(CC) -shared $(OBJS) -o $(NAME) $(LDFLAGS)

clean:
		$(RM) $(OBJS)

fclean:		clean
		$(RM) $(NAME)

re:		fclean all
